<body package="(none)" selector="updateBill">updateBill
	"comment stating purpose of message"

	| original computedTip percent |
	original := originalBill value.
	percent := percentage value.
        computedTip :=  percent * original / 100.
	totalBill value: (original + computedTip).
 	tip value: computedTip.
	^self.</body>
